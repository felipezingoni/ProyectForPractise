<div class="row logins">
  <div class="col-6" >
    <div class="container2">
      <h2>Welcome back</h2>
      <p>Welcome back ! Pleace enter your details</p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>

          <div style="display: flex;justify-content: space-between;">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

              <%= render "devise/shared/forgot" %>
          </div>
        </div>

        <div class="form-actions" >
          <%= f.button :submit, "Log in", class:"login" %>
        </div>

      <% end %>

        <div class="google">
          <%= image_tag('https://i.imgur.com/VioNFTO.png', size: "20x20")  %>
          <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, class:"signingoogle" %>
        </div>
        <div style="display:flex;justify-content: flex-start;margin-top: 40px;">
          <p style="margin-right: 14px;">Don't have an account?</p>
          <%= render "devise/shared/links" %>
        </div>



    </div>
  </div>

  <div class="col-6">
    <%= image_tag('https://i.imgur.com/rtDWjfK.jpg',class:"imgsign")%>
  </div>
</div>
